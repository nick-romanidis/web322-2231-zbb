 {{#if visible}}
    <tr>
        <td>{{name}}</td>
        <td>{{age}}</td>
        <td>{{occupation}}</td>
        <td>{{company}}</td>
        <td><img src="/employee-images/{{pictureUrl}}" alt="{{name}}'s picture"/></td>
    </tr>
{{else}}
    <tr>
        <td colspan="5">{{name}} has hidden their information.</td>
    </tr>
{{/if}}